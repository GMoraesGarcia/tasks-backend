pipeline{
    agent any
    stages{
        stage ('Build Backend'){
            steps{
                sh './mvnw clean package -DskipTests=true'
            }
        }
          stage ('Unit Tests'){
            steps{
                sh './mvnw test'
            }
        }
        stage('Build Container'){
            steps{
                sh 'docker build -t gmoraesgarcia/teste-jenkins .'
            }
        }
        stage('Push dockerHub'){
            steps{
                sh 'docker push gmoraesgarcia/teste-jenkins'
            }
        }
    }
}